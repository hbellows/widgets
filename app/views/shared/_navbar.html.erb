<%# if current_user %>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">Widgets</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to 'Home', widgets_path, class: 'nav-link' %>
        </li>
        <% if current_user %>
          <li class="nav-item">
            <%= link_to 'Sign Out', logout_path, method: :delete, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'My Widgets', dashboard_path, class: 'nav-link' %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Sign Up', new_registration_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Sign In', login_path, class: 'nav-link' %>
          </li>
        <% end %>
      </ul>
        <%= form_tag :search, method: :get, class: "search-box form-inline" do %>
          <div class="form-group search-field">
            <%= text_field_tag :q, nil, placeholder: 'Keyword', class: "form-control mr-2" %>
            <%= submit_tag 'Search', class: 'btn btn-outline-primary my-2 my-sm-0' %>
          </div>
        <% end %>

    </div>
  </nav>
<%# end %>