<%# if current_user %>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">Widgets</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to 'Home', root_path, class: 'nav-link' %>
        </li>
        <% if current_user%>
        <li class="nav-item active">
          <%= link_to 'Dashboard', dashboard_path, class: 'nav-link' %>
        </li>
        <% end %>
      </ul>
        <%= form_tag :search, method: :get, class: "search-box form-inline" do %>
          <div class="form-group search-field">
            <%= text_field_tag :q, nil, placeholder: 'Keyword', class: "form-control mr-2" %>
            <%= submit_tag 'Search', class: 'btn btn-outline-primary my-2 my-sm-0' %>
          </div>
        <% end %>
      <div class='ml-5'>
        <% if current_user %>
          <%= link_to 'Sign Out', destroy_user_session_path, class: 'btn btn-primary' %>
        <% else %>
          <%= link_to 'Sign In', new_user_session_path, class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </nav>
<%# end %>