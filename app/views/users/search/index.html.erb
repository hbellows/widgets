<div>
  <h3><%= @search_my_widgets.count %></h3>
</div>

<div class='visible-widgets'>
  <div class='list-group'>
    <% @search_my_widgets.visible.each do |widget| %>
      <ul id='widget' class="list-group list-group-flush">
        <li class="list-group-item"><h3><%= widget.name %></h3>
        <h5><%= widget.description %></h5><%= widget.kind %></li>
      </ul>
  <% end %>
</div>